<body class="fixed skin-blue layout-top-nav">
    <input type="text" id="txt_ManejaAdmision" name="txt_ManejaAdmision" value="@Core.Web.Helps.SessionFixed.ManejaAdmision" />
    <input type="text" id="txt_IdUsuario" name="txt_IdUsuario" value="@Core.Web.Helps.SessionFixed.IdUsuario" />
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-inverse navbar-static-top" style="font-family: Helvetica Neue, Helvetica, Arial, sans-serif; padding: 0 15px; height: 50px; font-size: 25px;line-height: 50px; font-weight: 300;">
                <div class="container">
                    <a class="navbar-brand text-center center-block" href="#myModal" data-toggle="modal">
                        <span class="logo-lg"><strong>Fixed</strong> Académico</span>
                    </a>
                    <div id="alerta" hidden>
                        <a class="navbar-fixed-top" href="@Url.Action("Index","ProcesarAdmision",new { Area = "Academico" },null)">
                            <i class="fa fa-bell-o" style="color:white; font-size:15px; padding:0px 0px 0px 30px"></i>
                            <span class="label label-warning " id="CantidadAdmisiones" style="position:absolute; top:10px; left:40px; text-align: center; font-size: 9px; padding: 2px 3px;line-height: 1; "></span>
                        </a>
                    </div>
                </div>
            </nav>
            <!-- Logo -->

        </header>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <a class="btn btn-primary" href="@Url.Action("Consulta","ReportePorUsuario",new { Area = "Academico" },null)">Reportes</a>
                                <a class="btn btn-default glyphicon glyphicon-expand" href="@Url.Action("Index","VisorDeVideoAcademico",new { Area = "General"},null)"></a>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <div class="modal-body">
                                @Html.DevExpress().TreeView(settings =>
                           {
                               settings.Name = "treeViewMenu";
                               settings.EnableHotTrack = true;
                               var Nodes = new List<Core.Info.Academico.aca_Menu_x_seg_usuario_Info>
                                   ();
                               Core.Web.Areas.Academico.Controllers.MenuPorSedePorUsuarioController.CreateTreeViewNodesRecursive(Nodes, settings.Nodes, 0, (Core.Web.Helps.SessionFixed.IdEmpresa == null ? 0 : Convert.ToInt32(Core.Web.Helps.SessionFixed.IdEmpresa)), (Core.Web.Helps.SessionFixed.IdSede == null ? 0 : Convert.ToInt32(Core.Web.Helps.SessionFixed.IdSede)), string.IsNullOrEmpty(Core.Web.Helps.SessionFixed.IdUsuario) ? "" : Core.Web.Helps.SessionFixed.IdUsuario);
                           }).GetHtml()
                            </div>
                            <div class="modal-footer">
                                @*<a class="btn btn-primary" href="@Url.Action("LoginEmpresa","FIXEDERP/Account/",new { IdUsuario = string.IsNullOrEmpty(Core.Web.Helps.SessionFixed.IdUsuario) ? "" : Core.Web.Helps.SessionFixed.IdUsuario })">Fixed ERP</a>*@
                                <a class="btn btn-danger" href="@Url.Action("Login","Account",new { Area = "" },null)">Cerrar sesión @Core.Web.Helps.SessionFixed.IdUsuario</a>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2018 Fixed S.A.</strong> All rights
            reserved.
        </footer>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>

    <!-- ./wrapper -->
</body>
</html>

<script type="text/javascript">
$(document).ready(function() {
    function ActualizarNotificacion() {
        if ($("#txt_ManejaAdmision").val() == "True") {
            $("#alerta").show();

            var datos = {
                IdUsuario: $("#txt_IdUsuario").val()
            }
            $.ajax({
                type: 'POST',
                data: JSON.stringify(datos),
                url: '@Url.Action("CantidadAdmisiones", "Admision", new { Area = "Academico" })',
                async: false,
                bDeferRender: true,
                bProcessing: true,
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $("#CantidadAdmisiones").html(data);
                },
                error: function (error) {
                }
            });
        }
        else {
            $("#alerta").hide();
        }
    }
    setInterval(ActualizarNotificacion, 5000);
});
</script>
