@using System.Web.UI.WebControls;
@using Core.Web.Areas.General.Controllers;

@Html.DevExpress().HtmlEditor(settings => {
    settings.Name = "Cuerpo";
    settings.CallbackRouteValues = new { Controller = "ColaCorreoCodigo", Action = "HtmlEditorPartial" };
    settings.Width = Unit.Percentage(100);
    settings.ToolbarMode = HtmlEditorToolbarMode.Menu;
    settings.CssFiles.Add("~/Content/CustomCss.css");
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadCallbackRouteValues = new { Controller = "ColaCorreoCodigo", Action = "HtmlEditorPartialImageUpload" };
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadFolder = ColaCorreoCodigoControllerHtmlEditorSettings1.ImageUploadDirectory;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.ValidationSettings.Assign(ColaCorreoCodigoControllerHtmlEditorSettings1.ImageUploadValidationSettings);


    settings.SettingsDialogs.InsertImageDialog.SettingsImageSelector.Assign(ColaCorreoCodigoControllerHtmlEditorSettings1.ImageSelectorSettings);
    settings.Html = ( Model==null ? "" :  (Model.Cuerpo==null ? "" : Model.Cuerpo));

}).GetHtml()


