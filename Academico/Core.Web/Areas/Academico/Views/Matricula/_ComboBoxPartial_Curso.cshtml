@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "IdComboCurso";
    settings.CallbackRouteValues = new { Controller = "Matricula", Action = "ComboBoxPartial_Curso", Area = "Academico" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Properties.DisplayFormatString = "{0}";
    settings.Properties.Columns.Add("NomCurso", "Curso").Width = System.Web.UI.WebControls.Unit.Percentage(100);
    //Campo ID
    settings.Properties.ValueField = "IdComboCurso";
    settings.Properties.ValueType = typeof(string);
    settings.Properties.TextField = "NomCurso";
    settings.Properties.NullText = "== Seleccione ==";
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
    settings.Properties.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['IdAnio'] = IdAnio.GetValue(); e.customArgs['IdAlumno'] = IdAlumno.GetValue();}";
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e) { IdParalelo.PerformCallback(); IdPlantilla.PerformCallback();SetMatricula_PorCurso(s,e); }";
}).BindList(new Core.Bus.Academico.aca_AnioLectivo_Jornada_Curso_Bus().GetListCursoPromoverAlumno(Convert.ToInt32(Core.Web.Helps.SessionFixed.IdEmpresa), Model.IdAlumno, Model.IdAnio)).Bind(Model.IdCurso).GetHtml()