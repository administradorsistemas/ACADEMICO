@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "IdCurso";
    settings.CallbackRouteValues = new { Controller = "Matricula", Action = "ComboBoxPartial_Curso", Area = "Academico" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Properties.DisplayFormatString = "[{0}] - {1}";
    settings.Properties.Columns.Add("IdCurso", "ID").Width = System.Web.UI.WebControls.Unit.Percentage(20);
    settings.Properties.Columns.Add("ComboCurso", "Curso").Width = System.Web.UI.WebControls.Unit.Percentage(80);
    //Campo ID
    settings.Properties.ValueField = "IdCurso";
    settings.Properties.ValueType = typeof(int);
    settings.Properties.TextField = "ComboCurso";
    settings.Properties.NullText = "== Seleccione ==";
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
    settings.Properties.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['IdAnio'] = IdAnio.GetValue(); e.customArgs['IdSede'] = IdSede.GetValue();}";
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e) { IdParalelo.PerformCallback(); }";
}).BindList(new Core.Bus.Academico.aca_AnioLectivo_Jornada_Curso_Bus().getList_ComboCurso(Convert.ToInt32(Core.Web.Helps.SessionFixed.IdEmpresa), Model.IdSede, Model.IdAnio)).Bind(Model.IdCurso).GetHtml()