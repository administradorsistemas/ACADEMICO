                    settings.Properties.ValueType = typeof(int);
                    settings.Properties.TextField = "NomJornada";
                    settings.Properties.NullText = "== Seleccione ==";
                    settings.Properties.DropDownButton.Enabled = false;
                    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
                    settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e){GetListMateriaPorCurso();}";
                    }).BindList(ViewBag.lst_jornada).GetHtml()
                    @*.Bind((Model.GetType() == typeof(Core.Info.Academico.aca_AnioLectivo_Jornada_Curso_Info) ) ? "" : Model.IdJornada);*@
                    @Html.ValidationMessageFor(q => q.IdJornada, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="IdEmpresa">Curso</label>
                    @Html.DevExpress().ComboBoxFor(q => q.IdCurso, settings =>
                   {
                       settings.Name = "IdCurso";
