@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "IdCiudad_padre";
    settings.CallbackRouteValues = new { Controller = "Alumno", Action = "ComboBoxPartial_Ciudad_padre", Area = "Academico" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Properties.DisplayFormatString = "[{0}] - {1}";
    settings.Properties.Columns.Add("IdCiudad", "ID").Width = System.Web.UI.WebControls.Unit.Percentage(20);
    settings.Properties.Columns.Add("Descripcion_Ciudad", "Ciudad").Width = System.Web.UI.WebControls.Unit.Percentage(80);
    //Campo ID
    settings.Properties.ValueField = "IdCiudad";
    settings.Properties.ValueType = typeof(string);
    settings.Properties.TextField = "Descripcion_Ciudad";
    settings.Properties.NullText = "== Seleccione ==";
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;
    settings.Properties.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['IdPais_padre'] = IdPais_padre.GetValue(); e.customArgs['Cod_Region_padre'] = Cod_Region.GetValue();e.customArgs['IdProvincia_padre'] = IdProvincia_padre.GetValue(); }";
    settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e) { IdParroquia_padre.PerformCallback();}";
}).BindList(new Core.Bus.General.tb_ciudad_Bus().get_list(Model.IdProvincia_padre, false)).Bind(Model.IdCiudad_padre).GetHtml()