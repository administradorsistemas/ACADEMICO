    function CantEstudiantesGeneral() {
        var datos = {
            IdEmpresa: $("#IdEmpresa").val(),
            IdAnio: $("#IdAnio").val(),
            IdSede: $("#IdSede").val(),
        }

        $.ajax({
            type: 'POST',
            data: JSON.stringify(datos),
            url: '@Url.Action("CantEstudiantesGeneral", "Dashboard")',
            async: false,
            bDeferRender: true,
            bProcessing: true,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                var NumRows = data.length;
                var Etiquetas = [];
                var Valores = [];
                var Background = [];
                var Border = [];

                $.each(data, function (index, value) {
                    if (index < NumRows) {
                        Etiquetas.push(value.Descripcion);
                        Valores.push(value.CantEstudiantes);
                    }
                })
                var CantEstudiantesGeneral_Chart = document.getElementById('CantEstudiantesGeneral-chart').getContext('2d');
                var chartEl = document.getElementById("CantEstudiantesGeneral-chart");
                chartEl.height = 300;

                var chart = new Chart(CantEstudiantesGeneral_Chart, {
                    type: 'bar',
                    data: {
                        labels: Etiquetas,
                        datasets:
                            [{
                                label: 'ESTUDIANTES POR AÑO LECTIVO',
                                data: Valores,
                                backgroundColor: colorRGBFijos(1),
                                borderColor: colorRGBFijos(1),
                                borderWidth: 2
                            }]
                    },
                    options: {
                        responsive: false,
                        animation: {
                            radius: {
                                duration: 400,
                                easing: 'linear',
                                loop: (context) => context.active
                            }
                        },
                        plugins: {
                            legend: {
                                position: 'top',
                            },
                            title: {
                                display: true,
                                text: 'ESTUDIANTES POR AÑO LECTIVO'
                            }
                        },
                        scales: {
                            xAxes: [{
                                ticks: {
                                    autoSkip: false,
                                    maxRotation: 90,
                                    minRotation: 90
                                }
                            }]
                        }
                    }
                });
            },
            error: function (error) {

            }
        });
    };

