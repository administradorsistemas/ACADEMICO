@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdAlumno";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "CuentasPorCobrarReportes", Action = "Cmb_Alumno", Area = "Reportes" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "pe_nombreCompleto";
        settings.Properties.TextFormatString = "[{0}] {1} - {2}";
        settings.Properties.ValueField = "IdEntidad";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.Columns.Add("IdEntidad", "ID", 10);
        settings.Properties.Columns.Add("pe_cedulaRuc", "Identificacion", 20);
        settings.Properties.Columns.Add("pe_nombreCompleto", "Alumno", 70);
        settings.Properties.ClientSideEvents.SelectedIndexChanged = "function(s, e) { DatosCorreo(); }";
    })
    .BindList(new Core.Web.Areas.Reportes.Controllers.CuentasPorCobrarReportesController().get_list_bajo_demanda_alumno, new Core.Web.Areas.Reportes.Controllers.CuentasPorCobrarReportesController().get_info_bajo_demanda_alumno)
    .Bind(Model.GetType() == typeof(Core.Info.Helps.cl_filtros_Info) ? "" : (Model == 0 ? "" : Model));

}
@comboBox.GetHtml()

<script type="text/javascript">
    function DatosCorreo() {
        console.log(IdAlumno.GetValue());
        if (IdAlumno.GetValue() > 0) {
            var datos = {
                IdEmpresa: $("#IdEmpresa").val(),
                IdAlumno: IdAlumno.GetValue()
            }
            $.ajax({
                type: 'POST',
                data: JSON.stringify(datos),
                url: '@Url.Action("DatosCorreo", "Cobranza", new { Area = "CuentasPorCobrar" })',
                async: false,
                bDeferRender: true,
                bProcessing: true,
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $("#Correos").val(data);
                    $("#correo").show();
                },
                error: function (error) {
                }
            });
        }
        else {
            $("#Correos").val("");
            $("#correo").hide();
        }

    }
</script>
