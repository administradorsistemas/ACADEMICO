@model Core.Info.Helps.cl_filtros_Info
@{
    ViewBag.Title = "Certificado de promoción";
    if (string.IsNullOrEmpty(Core.Web.Helps.SessionFixed.IdUsuario) || string.IsNullOrEmpty(Core.Web.Helps.SessionFixed.IdEmpresa))
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Areas/Reportes/Views/Shared/_LayoutConsulta.cshtml";
}
@using (Html.BeginForm("ACA_049", "AcademicoReportes", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdEmpresa)
    <div class="box">
        <div class="box-header with-border">
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Aplicar filtros</button>
                </div>
            </div>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>

        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="IdEmpresa">Año Lectivo</label>
                            @Html.Partial("_ComboBoxPartial_AnioAlumno", Model)
                            @Html.ValidationMessageFor(q => q.IdAnio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="IdEmpresa">Sede</label>
                            @Html.Partial("_CmbSedeAlumno", Model)
                            @Html.ValidationMessageFor(q => q.IdSede, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="IdEmpresa">Jornada</label>
                            @Html.Partial("_CmbJornadaAlumno", Model)
                            @*@Html.ValidationMessageFor(q => q.IdJornada, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="IdEmpresa">Nivel Académico</label>
                            @Html.Partial("_CmbNivelAlumno", Model)
                            @*@Html.ValidationMessageFor(q => q.IdNivel, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="IdEmpresa">Curso</label>
                            @Html.Partial("_CmbCursoAlumno", Model)
                            @*@Html.ValidationMessageFor(q => q.IdCurso, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="IdEmpresa">Paralelo</label>
                            @Html.Partial("_ComboBoxPartial_ParaleloAlumno", Model)
                            @*@Html.ValidationMessageFor(q => q.IdParalelo, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label for="IdEmpresa">Alumno</label>
                            @Html.Partial("_ComboBoxPartial_Alumno", Model)
                            @*@Html.ValidationMessageFor(q => q.IdParalelo, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            <label for="IdCliente"></label>
                            @Html.DevExpress().CheckBoxFor(q => q.mostrarAnulados, settings =>
                            {
                                settings.Name = "mostrarAnulados";
                                settings.Text = "Mostrar retirados";
                            }).GetHtml()
                            @Html.ValidationMessageFor(q => q.mostrarAnulados, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="">Fecha de emisión </label>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @Html.DevExpress().DateEditFor(q => q.fecha_ini, settings =>
                               {
                                   settings.Name = "fecha_ini";
                                   settings.Properties.UseMaskBehavior = true;
                                   settings.Properties.EditFormat = EditFormat.Date;
                                   settings.Properties.EditFormatString = "dd/MM/yyyy";
                                   settings.Properties.TimeSectionProperties.TimeEditProperties.EditFormat = EditFormat.Date;
                                   settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
                               }).GetHtml()
                                @Html.ValidationMessageFor(q => q.fecha_ini, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#tab_optativa" aria-controls="estadistica" role="tab" data-toggle="tab">Certificado Optativa</a>
            </li>
            <li>
                <a href="#tab_general" aria-controls="resumen" role="tab" data-toggle="tab">Certificado General</a>
            </li>
        </ul>
        <div class="tab-content" style="padding-top: 20px">
            <div role="tabpanel" class="tab-pane active" style="margin-left: 1em;" id="tab_optativa">
                @Html.DevExpress().WebDocumentViewer(settings =>
                    {
                        settings.ClientSideEvents.Init = "function(s, e) {s.previewModel.reportPreview.zoom(1);}";
                        settings.MobileMode = false;
                        settings.Name = "webDocumentViewer";
                    }).Bind(ViewBag.Report).GetHtml()
            </div>

            <div role="tabpanel" class="tab-pane" style="margin-left: 1em;" id="tab_general">

                @Html.DevExpress().WebDocumentViewer(settings =>
               {
                   settings.ClientSideEvents.Init = "function(s, e) {s.previewModel.reportPreview.zoom(1);}";
                   settings.MobileMode = false;
                   settings.Name = "webDocumentViewer2";
               }).Bind(ViewBag.ReportGeneral).GetHtml()
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            [@Session["IdEmpresa"]] @Session["nom_empresa"]
        </div>
        <!-- /.box-footer-->
    </div>
}
