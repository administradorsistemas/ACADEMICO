@model Core.Info.Helps.cl_filtros_Info
@{
    ViewBag.Title = "Aspirantes a mejor bachiller y excelencia académico";
    if (string.IsNullOrEmpty(Core.Web.Helps.SessionFixed.IdUsuario) || string.IsNullOrEmpty(Core.Web.Helps.SessionFixed.IdEmpresa))
    {
        Response.Redirect("~/Account/Login");
    }
    Layout = "~/Areas/Reportes/Views/Shared/_LayoutConsulta.cshtml";
}
@using (Html.BeginForm("ACA_075", "AcademicoReportes", FormMethod.Post, new { @class = "form", @role = "form" }))
{
    @Html.HiddenFor(q => q.IdEmpresa)
    @Html.HiddenFor(q => q.mostrarAnulados, new { @id = "mostrarAnulados" })
    <div class="box">
        <div class="box-header with-border">
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Aplicar filtros</button>
                </div>
            </div>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>

        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="IdProducto">Año lectivo</label>
                            @Html.Partial("_ComboBoxPartial_Anio", Model)
                            @Html.ValidationMessageFor(q => q.IdAnio, "", new { @class = "text-danger", @id = "IdAnio" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="IdCliente">Sede</label>
                            @Html.Partial("_CmbSede", Model)
                            @Html.ValidationMessageFor(q => q.IdSede, "", new { @class = "text-danger", @id = "IdSede" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="IdCliente">Jornada</label>
                            @Html.Partial("_CmbJornada", Model)
                            @*@Html.ValidationMessageFor(q => q.IdJornada, "", new { @class = "text-danger", @id = "IdJornada" })*@
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="IdCliente">Nivel</label>
                            @Html.Partial("_CmbNivel", Model)
                            @*@Html.ValidationMessageFor(q => q.IdNivel, "", new { @class = "text-danger", @id = "IdNivel" })*@
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="IdCliente">Curso</label>
                            @Html.Partial("_CmbCurso", Model)
                            @*@Html.ValidationMessageFor(q => q.IdCurso, "", new { @class = "text-danger", @id = "IdCurso" })*@
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="IdCliente">Paralelo*</label>
                            @Html.Partial("_ComboBoxPartial_Paralelo", Model)
                            @*@Html.ValidationMessageFor(q => q.IdParalelo, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
    </div>

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#tab_liceo" aria-controls="estadistica" role="tab" data-toggle="tab">Formato Liceo</a>
            </li>
            <li>
                <a href="#tab_ministerio" aria-controls="resumen" role="tab" data-toggle="tab">Formato Ministerio</a>
            </li>
            <li>
                <a href="#tab_historico" aria-controls="resumen" role="tab" data-toggle="tab">Formato Histórico</a>
            </li>
        </ul>
        <div class="tab-content" style="padding-top: 20px">
            <div role="tabpanel" class="tab-pane active" style="margin-left: 1em;" id="tab_liceo">
                @Html.DevExpress().WebDocumentViewer(settings =>
               {
                   settings.ClientSideEvents.Init = "function(s, e) {s.previewModel.reportPreview.zoom(1);}";
                   settings.MobileMode = false;
                   settings.Name = "webDocumentViewer";
               }).Bind(ViewBag.Report).GetHtml()
            </div>

            <div role="tabpanel" class="tab-pane" style="margin-left: 1em;" id="tab_ministerio">

                @Html.DevExpress().WebDocumentViewer(settings =>
               {
                   settings.ClientSideEvents.Init = "function(s, e) {s.previewModel.reportPreview.zoom(1);}";
                   settings.MobileMode = false;
                   settings.Name = "webDocumentViewer2";
               }).Bind(ViewBag.ReportMinisterio).GetHtml()
            </div>

            <div role="tabpanel" class="tab-pane" style="margin-left: 1em;" id="tab_historico">

                @Html.DevExpress().WebDocumentViewer(settings =>
               {
                   settings.ClientSideEvents.Init = "function(s, e) {s.previewModel.reportPreview.zoom(1);}";
                   settings.MobileMode = false;
                   settings.Name = "webDocumentViewer3";
               }).Bind(ViewBag.ReporttHistorico).GetHtml()
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            [@Session["IdEmpresa"]] @Session["nom_empresa"]
        </div>
        <!-- /.box-footer-->
    </div>
}
