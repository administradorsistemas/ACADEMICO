@using System.Web.UI.WebControls;
@{
    var comboBox = Html.DevExpress().ComboBox(settings =>
    {
        settings.Name = "IdCurso";
        settings.Width = Unit.Percentage(100);
        settings.Properties.DropDownWidth = Unit.Percentage(100);
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.CallbackRouteValues = new { Controller = "AcademicoReportes", Action = "CmbCurso", Area = "Reportes" };
        settings.Properties.CallbackPageSize = 15;
        settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
        settings.Properties.TextField = "NomCurso";
        settings.Properties.TextFormatString = "[{0}] - {1}";
        settings.Properties.ValueField = "IdCurso";
        settings.Properties.ValueType = typeof(decimal);
        settings.Properties.Columns.Add("p_IdCurso", "ID", 10);
        settings.Properties.Columns.Add("NomCurso", "Curso", 70);
        settings.Properties.NullText = "== Seleccione ==";
        settings.Properties.DropDownStyle = DropDownStyle.DropDown;
        settings.Properties.ClientSideEvents.BeginCallback = "function(s, e) { e.customArgs['IdAnio'] = IdAnio.GetValue(); e.customArgs['IdCurso'] = IdCurso.GetValue(); }";
    })//.BindList(new Core.Web.Areas.Reportes.Controllers.AcademicoReportesController().get_list_bajo_demanda_alumno, new Core.Web.Areas.Reportes.Controllers.AcademicoReportesController().get_info_bajo_demanda_alumno)
    .Bind(Model.GetType() == typeof(Core.Info.Helps.cl_filtros_Info) ? "" : (Model == 0 ? "" : Model));
}
@comboBox.GetHtml()
