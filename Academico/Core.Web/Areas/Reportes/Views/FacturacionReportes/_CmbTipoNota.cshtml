@Html.DevExpress().ComboBox(settings =>
{
    settings.Name = "IdTipoNota";
    settings.CallbackRouteValues = new { Controller = "FacturacionReportes", Action = "CmbTipoNota", Area = "Reportes" };
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Properties.DisplayFormatString = "[{0}] - {1}";
    settings.Properties.Columns.Add("IdTipoNota", "ID").Width = System.Web.UI.WebControls.Unit.Percentage(10);
    settings.Properties.Columns.Add("No_Descripcion", "Tipo Nota").Width = System.Web.UI.WebControls.Unit.Percentage(90);
    //Campo ID
    settings.Properties.ValueField = "IdTipoNota";
    settings.Properties.ValueType = typeof(string);
    settings.Properties.TextField = "No_Descripcion";
    settings.Properties.NullText = "== Seleccione ==";
    settings.Properties.DropDownStyle = DropDownStyle.DropDown;

}).BindList(new Core.Bus.Facturacion.fa_TipoNota_Bus().get_list(Convert.ToInt32(Core.Web.Helps.SessionFixed.IdEmpresa), false)).GetHtml()

